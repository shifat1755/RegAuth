@{
}
@model RegAuth.Models.LoginUserViewModel;
<h1>User Login</h1>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="mt-3">
        <level class="form-label">Email</level>
        <input type="email" class="form-control" asp-for="Email"/>
    </div>
    <div class="mt-3">
        <level class="form-label">Password</level>
        <input type="password" class="form-control"  asp-for="Password"/>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
</form>